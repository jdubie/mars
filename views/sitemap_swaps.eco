<?xml version="1.0" encoding="UTF-8"?>
  <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
          xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
          xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">
    <% for elem in @rows: %>
      <% swap = elem.doc %>
      <url>
        <loc>https://thelifeswap.com/#!/swaps/<%= swap._id %></loc>

        <% if swap.image_big: %>
          <image:image>
            <image:loc>https:<%= swap.image_big %></image:loc>
          </image:image>
        <% end %>

        <% date = new Date(swap.ctime) %>
        <% month = date.getUTCMonth().toString() %>
        <% month = "0#{month}" if month.length is 1 %>
        <% day = date.getDate() %>
        <% day = "0#{day}" if day.length is 1 %>

        <% lastMod = "#{date.getUTCFullYear()}-#{month}-#{day}" %>
        <lastmod><%= lastMod %></lastmod>

        <priority>0.8</priority>
      </url>
    <% end %>
  </urlset> 
  
